
@{
    ViewBag.Title = "Quản lý tài khoản";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            Danh sách tài khoản
        </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-header">
                Danh sách tài khoản
                <div class="pull-right tableTools-container"></div>
            </div>
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Tên tài khoản</th>
                            <th>Quyền</th>
                            <th>Email</th>
                            <th class="center">Lần đăng nhập gần nhất</th>
                            <th class="center">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 1; i < 20; i++)
                        {
                            <tr>
                                <td class="center">
                                    <label class="pos-rel">@i</label>
                                </td>
                                <td>
                                    <span>Tài khoản @i</span>
                                </td>
                                <td>
                                    <span>Quyền @i</span>
                                </td>
                                <td>
                                    <span>Email_@i@@gmail.com</span>
                                </td>
                                <td class="center">
                                    <span>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
                                </td>
                                <td class="center">
                                    <div class="action-buttons">
                                        <a class="green" onclick="showModalInfo()">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>
                                        <a class="red" onclick="showModalDelete()">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="smaller lighter blue no-margin">Thông tin tài khoản</h3>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 margin-md-bottom">
                        <div class="form-group">
                            <label class="control-label no-padding-right">Quyền</label>
                            <div>
                                <select class="col-xs-12">
                                    <option value="">Chọn...</option>
                                    @for (var i = 0; i < 5; i++)
                                    {
                                        <option value="@i">Quyền @i</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 margin-md-bottom">
                        <div class="form-group">
                            <label class="control-label no-padding-right">Tên tài khoản</label>
                            <div>
                                <input type="text" class="col-xs-12" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 margin-md-bottom">
                        <div class="form-group">
                            <label class="control-label no-padding-right">Mật khẩu</label>
                            <div>
                                <input type="password" class="col-xs-12" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 margin-md-bottom">
                        <div class="form-group">
                            <label class="control-label no-padding-right">Nhập lại mật khẩu</label>
                            <div>
                                <input type="password" class="col-xs-12" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 margin-md-bottom">
                        <div class="form-group">
                            <label class="control-label no-padding-right">Email</label>
                            <div>
                                <input type="text" class="col-xs-12" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer text-right">
                <button class="btn btn-sm btn-success">Lưu</button>
                <button class="btn btn-sm btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
<div id="modalDelete" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="smaller lighter blue no-margin">Xác nhận thông tin</h3>
            </div>

            <div class="modal-body">
                <span>Bạn có chắc chắn muốn xóa bản ghi này?</span>
            </div>
            <div class="modal-footer text-right">
                <button class="btn btn-sm btn-danger">Xóa</button>
                <button class="btn btn-sm btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/dataTable.js"></script>
<script>
    function showModalInfo(action) {
        $("#modal").modal();
    }
    function showModalDelete() {
        $("#modalDelete").modal();
    }
</script>