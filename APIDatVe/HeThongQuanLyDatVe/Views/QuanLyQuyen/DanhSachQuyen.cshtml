
@{
    ViewBag.Title = "Quản lý quyền";
}
<div class="page-content" ng-controller="controller">
    <div class="page-header">
        <h1>
            Cài đặt
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Quản lý quyền
            </small>
        </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-header">
                Quản lý quyền
                <div class="pull-right tableTools-container"></div>
                <button class="btn btn-success pull-right btn-sm" style="margin: 4px;" ng-click="add()">Thêm mới</button>
            </div>
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Mã quyền</th>
                            <th>Tên quyền</th>
                            <th class="center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody ng-cloak>
                        <tr ng-repeat="item in datas.quyens">
                            <td class="center">
                                <label class="pos-rel">{{$index + 1}}</label>
                            </td>
                            <td>
                                {{item.maquyen}}
                            </td>
                            <td>
                                {{item.tenquyen}}
                            </td>
                            <td class="center">
                                <div class="action-buttons">
                                    <a class="green" ng-click="getThongTinQuyen(item.maquyen)">
                                        Chi tiết
                                    </a>
                                    <a ng-if="item.maquyen != 'Default '" class="red" ng-click="confirmChangeStatus(item.maquyen)">
                                        <span>Xóa</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-xs-6">
                    <select ng-model="filter._sobanghi" class="col-xs-2" convert-to-number ng-change="getDanhSachQuyen()">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <div class="col-xs-6">
                    <span style="float:right;margin-top: 3px;"> {{datas.sobanghi}} bản ghi</span>
                    <input type="number" min="1" max="{{datas.sobanghi % filter._sobanghi == 0?datas.sobanghi / filter._sobanghi:datas.sobanghi / filter._sobanghi + 1}}" name="name" ng-model="filter._trang" ng-change="getDanhSachQuyen()" class="col-xs-2" style="float:right;margin-right:50px;height: 27px;margin-right:15px" />
                    <label style="float:right;margin-right:10px;margin-top: 3px;">Trang</label>
                </div>
            </div>
        </div>
    </div>

    <div id="modal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="smaller lighter blue no-margin">Thông tin quyền</h3>
                </div>
                <div class="modal-body">
                    <p><span class="require">(*)</span> Thông tin trường bắt buộc</p>
                    <div class="row">
                        <div class="col-md-12 margin-md-bottom">
                            <div class="form-group">
                                <label class="control-label no-padding-right">Mã quyền <span class="require">(*)</span> </label>
                                <div>
                                    <input type="text" ng-disabled="!isAdd" ng-model="detail.maquyen" class="col-xs-12" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 margin-md-bottom">
                            <div class="form-group">
                                <label class="control-label no-padding-right">Tên quyền <span class="require">(*)</span></label>
                                <div>
                                    <input type="text" ng-model="detail.tenquyen" class="col-xs-12" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer text-right">
                    <button class="btn btn-sm btn-success" ng-click="submit()">Lưu</button>
                    <button class="btn btn-sm btn-default" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>
    <div id="modalDelete" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="smaller lighter blue no-margin">Xác nhận thông tin</h3>
                </div>
                <div class="modal-body">
                    <span>Bạn có chắc chắn muốn thay đổi bản ghi này?</span>
                </div>
                <div class="modal-footer text-right">
                    <button class="btn btn-sm btn-danger" ng-click="changeStatus()">Xác nhận</button>
                    <button class="btn btn-sm btn-default" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var urlGet = 'http://localhost:56893/api/quyen';
    var urlDetail = 'http://localhost:56893/api/quyen/detail';
    var urlPost = 'http://localhost:56893/api/quyen/post';
    var urlPut = 'http://localhost:56893/api/quyen/put';
    var urlDelete = 'http://localhost:56893/api/quyen/delete';
    app.controller('controller', ['$scope', '$http', function ($scope, $http) {
        $scope.filter = {
            _tukhoa: '',
            _trang: 1,
            _sobanghi: 100
        }
        $scope.datas = [];
        $scope.maquyen = "";
        $scope.isAdd = true;
        $scope.detail = {};
        $scope.getDanhSachQuyen = function () {
            $http({
                url: urlGet,
                method: "GET",
                params: $scope.filter
            }).then(function success(response) {
                $scope.datas = response.data;
            }, function error(response) {
                alert("Thực hiện không thành công");
            })
        };
        $scope.add = function () {
            $scope.isAdd = true;
            $scope.detail = {
                maquyen: '',
                tenquyen: '',
                trangthai: 1
            }
            $("#modal").modal();
        }
        $scope.getThongTinQuyen = function (_maquyen) {
            $scope.isAdd = false;
            $http({
                url: urlDetail,
                method: "GET",
                params: {
                    _maquyen
                }
            }).then(function success(response) {
                $scope.detail = response.data;
                console.log($scope.detail)
                $("#modal").modal();
            }, function error(response) {
                alert(response.data.Message);
            })
        };
        $scope.submit = function () {
            if ($scope.detail.maquyen == "" || $scope.detail.tenquyen == "") {
                alert("Vui lòng nhập đủ thông tin")
                return;
            }
            if ($scope.isAdd) {
                $http({
                    url: urlPost,
                    method: "POST",
                    data: $scope.detail
                }).then(function success(response) {
                    $scope.getDanhSachQuyen();
                    $("#modal").modal("hide");
                }, function error(response) {
                    alert("Thực hiện không thành công");
                })
            }
            else {
                $http({
                    url: urlPut,
                    method: "PUT",
                    data: $scope.detail
                }).then(function success(response) {
                    $scope.getDanhSachQuyen();
                    $("#modal").modal("hide");
                }, function error(response) {
                    alert("Thực hiện không thành công");
                })
            }
        }
        $scope.confirmChangeStatus = function (_maquyen) {
            $scope.maquyen = _maquyen;
            $("#modalDelete").modal();
        }
        $scope.changeStatus = function () {
            $http({
                url: urlDelete,
                method: "DELETE",
                params: {
                    _maquyen: $scope.maquyen
                }
            }).then(function success(response) {
                $("#modalDelete").modal("hide");
                $scope.getDanhSachQuyen();
            }, function error(response) {
                alert("Thực hiện không thành công");
                $("#modalDelete").modal("hide");
            })
        }
        $scope.getDanhSachQuyen();
    }]);
</script>