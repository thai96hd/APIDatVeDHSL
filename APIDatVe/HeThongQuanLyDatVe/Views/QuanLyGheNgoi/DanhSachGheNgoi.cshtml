
@{
    ViewBag.Title = "Quản lý ghế ngồi";
}
<style>
    .lbl-ghe {
        display: block;
        cursor:pointer
    }
</style>
<div class="page-content">
    <div class="page-header">
        <h1>
            Quản lý ghế ngồi
        </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-header">
                Quản lý ghế ngồi
                <div class="pull-right tableTools-container"></div>
            </div>
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Tên xe</th>
                            <th>Loại xe</th>
                            <th>Biển số</th>
                            <th class="center">Số ghế</th>
                            <th class="center">Trạng thái cập nhật</th>
                            <th class="center">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 1; i < 20; i++)
                        {
                            <tr>
                                <td class="center">
                                    <label class="pos-rel">@i</label>
                                </td>
                                <td>
                                    <span>Tên xe @i</span>
                                </td>
                                <td>
                                    <span>Loại xe @i</span>
                                </td>
                                <td><span>Biển số @i</span></td>
                                <td class="center">
                                    <span>@i</span>
                                </td>
                                <td class="center"><span> -------</span></td>
                                <td class="center">
                                    <div class="action-buttons">
                                        <a class="green"onclick="showModalInfo()">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="smaller lighter blue no-margin">Thông tin ghế ngồi</h3>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 margin-md-bottom">
                        <table class="table table-bordered table-condensed table-hover">
                            <tbody>
                                @for(int i = 0; i < 10; i++)
                                {
                                    int vitri = 3 * i + 1;
                                    <tr>
                                        <td class="text-center">
                                            <input id="ghe_@vitri" type="checkbox" />
                                            <label for="ghe_@vitri" class="lbl-ghe">Ghế @vitri</label>
                                        </td>
                                        <td class="text-center">
                                            <input id="ghe_@(vitri+1)" type="checkbox" />
                                            <label for="ghe_@(vitri+1)" class="lbl-ghe">Ghế @(vitri + 1)</label>
                                        </td>
                                        <td class="text-center">
                                            <input id="ghe_@(vitri+2)" type="checkbox" />
                                            <label for="ghe_@(vitri+2)" class="lbl-ghe">Ghế @(vitri + 2)</label>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer text-right">
                <button class="btn btn-sm btn-success">Lưu</button>
                <button class="btn btn-sm btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/dataTable.js"></script>
<script>
    function showModalInfo() {
        $("#modal").modal();
    }
</script>