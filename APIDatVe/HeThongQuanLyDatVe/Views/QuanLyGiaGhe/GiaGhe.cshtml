
@{
    ViewBag.Title = "Quản lý giá ghế";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            Quản lý giá ghế
        </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-header">
                Quản lý giá ghế
                <div class="pull-right tableTools-container"></div>
            </div>
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Tên xe</th>
                            <th>Loại xe</th>
                            <th>Biển số</th>
                            <th>Giá người lớn</th>
                            <th>Giá trẻ em</th>
                            <th class="center">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 1; i < 20; i++)
                        {
                            <tr>
                                <td class="center">
                                    <label class="pos-rel">@i</label>
                                </td>
                                <td>
                                    <span>Tên xe @i</span>
                                </td>
                                <td>
                                    <span>Loại xe @i</span>
                                </td>
                                <td><span>Biển số @i</span></td>
                                <td><span>@i</span></td>
                                <td><span>@i</span></td>
                                <td class="center">
                                    <div class="action-buttons">
                                        <a class="green" onclick="showModalInfo()">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="smaller lighter blue no-margin">Thông tin giá ghế</h3>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 margin-md-bottom">
                        <div class="form-group">
                            <label class="control-label no-padding-right">Tên xe</label>
                            <div>
                                <input disabled type="text" class="col-xs-12" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 margin-md-bottom">
                        <div class="form-group">
                            <label class="control-label no-padding-right">Giá người lớn</label>
                            <div>
                                <input type="text" class="col-xs-12" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 margin-md-bottom">
                        <div class="form-group">
                            <label class="control-label no-padding-right">Giá trẻ em</label>
                            <div>
                                <input type="text" class="col-xs-12" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer text-right">
                <button class="btn btn-sm btn-success">Lưu</button>
                <button class="btn btn-sm btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/dataTable.js"></script>
<script>
    function showModalInfo() {
        $("#modal").modal();
    }
</script>