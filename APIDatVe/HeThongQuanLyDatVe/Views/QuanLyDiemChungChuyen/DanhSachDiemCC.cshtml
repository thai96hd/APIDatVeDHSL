
@{
    ViewBag.Title = "Quản lý điểm chung chuyển";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            Quản lý điểm chung chuyển
        </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-header">
                Quản lý điểm chung chuyển
                <div class="pull-right tableTools-container"></div>
                <button class="btn btn-success pull-right btn-sm" style="margin: 4px;">Thêm mới</button>
            </div>
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>TP Xuất phát</th>
                            <th>Mã CC</th>
                            <th>Địa điểm</th>
                            <th>Thời gian</th>
                            <th>Ghi chú</th>
                            <th class="center">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 1; i < 20; i++)
                        {
                            <tr>
                                <td class="center">
                                    <label class="pos-rel">@i</label>
                                </td>
                                <td>
                                    <span>TP Xuất phát @i</span>
                                </td>
                                <td>
                                    <span>Mã CC @i</span>
                                </td>
                                <td>
                                    <span>Địa điểm @i</span>
                                </td>
                                <td><span>Thời gian @i</span></td>
                                <td><span>Ghi chú @i</span></td>
                                <td class="center">
                                    <div class="action-buttons">
                                        <a class="blue" href="#">
                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                        </a>

                                        <a class="green" href="#">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>

                                        <a class="red" href="#">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/dataTable.js"></script>