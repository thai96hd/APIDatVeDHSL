
@{
    ViewBag.Title = "Setting Style";
}

<div class="page-content" ng-controller="controller">
    <div ng-if="typestyle == 1">
        <style>
            .table-header {
                background-color: #1abd36 !important;
            }

            .navbar {
                background: #18b733 !important;
            }

